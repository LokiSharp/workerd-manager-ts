{
    "name": "@workerd-manager/utils",
    "version": "0.0.0",
    "author": "LokiSharp",
    "private": true,
    "license": "MIT",
    "scripts": {
        "lint": "eslint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "jest": {
        "roots": [
            "<rootDir>/test"
        ],
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "testMatch": [
            "**/__tests__/**/*.+(ts)",
            "**/?(*.)+(spec|test).+(ts)"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}