generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_PATH")
}

model Worker {
  UID          String  @id @default(uuid())
  ExternalPath String  @default("/")
  HostName     String  @default("localhost")
  NodeName     String  @default("default")
  Port         Int
  Entry        String  @default("entry.js")
  Code         String
  Name         String
  TunnelID     String?
  UserID       BigInt
  Template     String?

  @@unique([UID])
}
