generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model Worker {
    id           String  @id @default(uuid())
    externalPath String  @default("/")
    hostName     String  @default("localhost")
    nodeName     String  @default("default")
    port         Int
    entry        String  @default("entry.js")
    code         String
    name         String
    tunnelId     String?
    template     String?
    user         User    @relation(fields: [userId], references: [id])
    userId       String
}

model User {
    id       String   @id @default(uuid())
    email    String   @unique
    userName String
    password String
    role     Role     @default(USER)
    status   Int?
    workers  Worker[]
}

enum Role {
    USER
    ADMIN
}
